<view bindtouchstart="touchStart" bindtouchend="touchEnd" style="width:100%; min-height:600px;">

    <view id="notification-view" class="overview" animation="{{notificationAnimation}}" style="height:{{blockHeight}}px;">
        <view class="header-view" id="notification-header-view" class="overview-header" bindtap="tapHeader" style="height:{{itemHeight}}px;">
            <text class="header">{{notification.description}}({{notification.badge}})</text>
        </view>
        <view wx:for="{{notification.filteredContent}}" wx:key="timeline">

            <view id='notify-{{item.id}}' class="item" bindtap='tapTimeline' style="height:{{itemHeight}}px;">
                <text wx:if="{{!item.read}}">(未读)</text><text>{{item.name}}</text>
            </view>

        </view>
    </view>

    <view id="assignment-view" class="overview" animation="{{assignmentAnimation}}" style="height:{{blockHeight}}px;">
        <view class="header-view" id="assignment-header-view" class="overview-header" bindtap="tapHeader" style="height:{{itemHeight}}px;">
            <text class="header">{{assignment.description}}({{assignment.badge}})</text>
        </view>
        <view wx:for="{{assignment.filteredContent}}" wx:key="timeline">

            <view id='assignment-{{item.id}}' class="item" bindtap='tapTimeline' style="height:{{itemHeight}}px;">
                <text wx:if="{{!item.read}}">(未读)</text><text>{{item.title}}</text>
            </view>

        </view>
    </view>

    <view id="discussion-view" class="overview" animation="{{discussionAnimation}}" style="height:{{blockHeight}}px;">
        <view class="header-view" id="discussion-header-view" class="overview-header" bindtap="tapHeader" style="height:{{itemHeight}}px;">
            <text class="header">{{discussion.description}}({{discussion.badge}})</text>
        </view>
        <view wx:for="{{discussion.filteredContent}}" wx:key="timeline">

            <view id='discuss-{{item.id}}' class="item" bindtap='tapTimeline' style="height:{{itemHeight}}px;">
                <text wx:if="{{!item.read}}">(未读)</text><text>{{item.subject}}</text>
            </view>

        </view>
    </view>
</view>

<!--menu-->
<view id="left-menu" animation="{{animationData}}" style="width:{{menuWidth}}px;  position:absolute; top:0; left:{{menuLeft}}px;">
    <view class="course" id="course-title" bindtap="tapAllCourse">
        <text style="color:white">全部</text>
    </view>
    <view wx:for="{{courses}}" wx:key="course">
        <view class="course" id="{{item.id}}" bindtap="tapCourse">
            <text style="color:white">{{item.name}}</text>
        </view>
    </view>
    <button type="default" bindtap="tapFileContent">归档内容</button>
    <button type="warn" bindtap="tapLogout">解除绑定</button>
</view>
